<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <!-- enable overlapping of exiting and entering activities-->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    <style name="RaisedButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:backgroundTint">@color/mainWhiteDark</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style
        name="TextList"
        parent="BaseTextList">
        <item name="android:letterSpacing">0</item>
    </style>

    <style
        name="TextHeadlineNew"
        parent="BaseTextHeadlineV2">
        <item name="android:letterSpacing">0</item>
    </style>

    <style
        name="TextHighlight"
        parent="BaseTextHighlight">
        <item name="android:letterSpacing">0</item>
    </style>

</resources>
